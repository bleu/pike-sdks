{
  "name": "@pike-sdk/monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "dev": "turbo run dev --filter=@pike/ponder-app",
    "start": "turbo run start --filter=@pike/ponder-app",
    "db": "turbo run db --filter=@pike/ponder-app",
    "codegen": "turbo run codegen --filter=@pike/ponder-app",
    "build": "turbo build",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "typecheck": "tsc",
    "format": "prettier --write \"**/*.{ts,tsx,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json}\""
  },
  "devDependencies": {
    "turbo": "latest"
  },
  "dependencies": {
    "tslib": "^2.8.1"
  }
}
